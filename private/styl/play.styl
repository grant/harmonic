.overlay
  pointer-events none
  z-index 1000
  .logo
    top 0
    left 0
    padding 20px
    width 120px
  ul.friends
    position: absolute
    bottom 0
    width 100%
    height 100px
    text-align center
    .friend
      width 100px
      height 100px
      background-color blue
      display: inline-block
      margin 0 10px
.underlay
  background-color gray
  text-align: center
  > .centerContent
    background-color darkGray
    display: inline-block
    width 600px
    height 100%
    margin 0 auto
    arrowWidth = 60px
    .arrow
      &:hover
        opacity 0.5
      transition opacity 0.2s linear
      position relative
      height 100%
      width arrowWidth
      color beige
      cursor pointer
      charWidth = 25px
      font-size charWidth
      charPadding = 10px
      &.left
        background-color red
        float left
      &.right
        background-color blue
        float right
      .char
        width 100%
        position absolute
        top 50%
        height 10px
        margin-top -5px
    .photo
      margin 0 auto
      photoSize = 400px
      width photoSize
      height photoSize
      background-color blue
      margin-top 100px
.overlay, .underlay
  height 100%
  width 100%
  position absolute