body
  overflow hidden

.overlay
  pointer-events none
  z-index 1000
  overlayPadding = 20px
  .profileArea
    top 0
    right 0
    padding overlayPadding
    .name
      color white
    .photo
      width 50px
      height 50px
  .logo
    top 0
    left 0
    padding overlayPadding
    width 120px
  ul.friends
    bottom 0
    width 100%
    height 100px
    text-align center
    .friend
      position: relative
      width 100px
      height 100px
      background-color blue
      display inline-block
      margin 0 10px
      .slideArea
        position absolute
        bottom 0
        .songName
          text-align: center
          color #fffcc4
        img.albumPhoto
          width 90px
          height 90px
          margin 5px
      img.profilePhoto
        height 100px
        width 100px


  .profileArea, .logo, ul.friends
    position absolute
.underlay
  background-color gray
  text-align center
  > .centerContent
    background-color darkGray
    display inline-block
    width 600px
    height 100%
    margin 0 auto
    arrowWidth = 60px
    .arrow
      &hover
        opacity 0.5
      transition opacity 0.2s linear
      position relative
      height 100%
      width arrowWidth
      color beige
      cursor pointer
      charWidth = 25px
      font-size charWidth
      charPadding = 10px
      &.left
        background-color red
        float left
      &.right
        background-color blue
        float right
      .char
        width 100%
        position absolute
        top 50%
        height 10px
        margin-top -5px
    .photo
      margin 0 auto
      photoSize = 400px
      width photoSize
      height photoSize
      background-color blue
      margin-top 100px
.overlay, .underlay
  height 100%
  width 100%
  position absolute

.flyAway
  position absolute
  display none
  height 100%
  z-index 500000000
  .centerContent
    background-color darkGray
    display inline-block
    width 600px
    height 100%
    margin 0 auto
    height 100%
    z-index 500000000
    arrowWidth = 60px
