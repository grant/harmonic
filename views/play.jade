extends layout

block content
  .flyAway
  .overlay
    img.logo(src='/images/logo.svg')
    .profileArea
      .name #{name}
      img.photo(src = "#{photo}")
    .playlistArea
      .playlistButton 
        .char ❮
        .playlistBody

    ul.friends
      .friend
        .slideArea
          div.songName Song Name
          img.albumPhoto(src='/images/default.png')
        img.profilePhoto(src='/images/logo.png')

  .underlay
    .centerContent
      .left.arrow
        .char ✘
      .right.arrow
        .char ✓
      audio#widget
      .photo.artwork
      .progress
      .control

block js
  script(src='/socket.io/socket.io.js')
  script(src="/js/ui.js")
  script(src="/js/progress.min.js")
  script(src="http://connect.soundcloud.com/sdk.js")
  script(src="http://w.soundcloud.com/player/api.js")
  script(src="/js/play.js")
